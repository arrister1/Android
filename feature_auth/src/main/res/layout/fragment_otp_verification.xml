<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    tools:context="com.synrgy7team4.feature_auth.presentation.register.OtpVerificationFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="47dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="7dp"
        app:icon="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/verifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verifikasi"
            android:textColor="@color/primary_blue"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="213dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/phoneNumberInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="Kode OTP telah dikirimkan ke 0812****89, masukkan kode di bawah ini untuk melanjutkan"
            app:layout_constraintTop_toBottomOf="@id/verifikasi"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:id="@+id/otpInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberInformation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/inputCode1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="@string/input_pertama"
                android:layout_margin="8dp"
                tools:ignore="labelFor"/>
            <EditText
                android:id="@+id/inputCode2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="@string/input_kedua"
                android:layout_margin="8dp"
                tools:ignore="labelFor"/>
            <EditText
                android:id="@+id/inputCode3"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="@string/input_ketiga"
                android:layout_margin="8dp"
                tools:ignore="labelFor"/>
            <EditText
                android:id="@+id/inputCode4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="@string/input_keempat"
                android:layout_margin="8dp"
                tools:ignore="labelFor"/>
            <EditText
                android:id="@+id/inputCode5"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="@string/input_kelima"
                android:layout_margin="8dp"
                tools:ignore="labelFor"/>
            <EditText
                android:id="@+id/inputCode6"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:contentDescription="@string/input_keenam"
                android:layout_margin="8dp"
                tools:ignore="labelFor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sendOtpCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:layout_marginTop="40dp"
            android:text="00:53"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/otpInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitOTPButton"
            android:layout_margin="70dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/PrimaryActiveButton"
            android:text="@string/lanjut"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>