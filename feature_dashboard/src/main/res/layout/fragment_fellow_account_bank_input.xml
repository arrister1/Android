<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        tools:context=".presentation.ui.transfer.FellowAccountBankInputFragment">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/tombol_kembali"
            android:src="@drawable/back_button_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sesama_bank"
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:contentDescription="@string/sesama_bank"
            android:text="@string/sesama_bank"
            android:textAlignment="center"
            android:textColor="@color/primary_blue"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nomor_rekening"
            style="@style/RegulerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="281dp"
            android:contentDescription="@string/nomor_rekening"
            android:text="@string/nomor_rekening"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nomor_rekening" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_nomor_rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#F5F5F5"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:expandedHintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:placeholderText="1234051294"
            app:placeholderTextAppearance="@font/calibri">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiedt_nomor_rekening"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/calibri"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#1C1C1C"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            style="@style/PrimaryActiveButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="610dp"
            android:contentDescription="@string/lanjutkan"
            android:fontFamily="@font/calibri"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/lanjutkan"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone">
        <!-- Konten overlay akan ditambahkan di sini secara programatik -->
    </FrameLayout>
</FrameLayout>